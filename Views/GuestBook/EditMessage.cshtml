@model Kursmoment3.Models.Message

<!-- OBS!! DEN HÄR KOMMER ATT TAS BORT DÅ JAG INTE TYCKER ATT MAN SKA KUNNA REDIGERA INLÄGG PÅ KLOTTERPLANKET MEN JAG BEHÅLLER VIEW'EN ÄN SÅLÄNGE'-->
<!-- Här behöver jag inte lägga till en as-action="" i och med att vyn/view heter samma som metoden i GuestBookController, där metoden också heter EditMessage() -->
<form method="post">
    @* här skickas Id't med i den dolda inputten genom att använda sig utab asp-taggen asp-for *@
    <input asp-for="ID" hidden/> 
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Message</h2>
        </div>

        <div class="row">
            <div class="col-8">
                @* NAME *@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UserName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                </div>

                @* MESSAGE *@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UserMessage"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UserMessage" class="form-control" />
                        <span asp-validation-for="UserMessage" class="text-danger"></span>
                    </div>

                </div>

                @* BUTTONS *@
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        @* CHANGE MESSAGE BUTTON *@
                        <div class="col">
                            @* When submitted, it runs the forms POST *@
                            <button type="submit" class="btn btn-info w-100"> <i class="fas fa-edit"></i> &nbsp; Uppdatera</button>
                        </div>
                        @* GO BACK BUTTON *@
                        <div class="col">
                            <a class="btn btn-success w-100" asp-action="Index"><i class="fas fa-sign-out-alt"></i> &nbsp; Gå tillbaka</a>
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @* Client side validation, that hits before the backend validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}